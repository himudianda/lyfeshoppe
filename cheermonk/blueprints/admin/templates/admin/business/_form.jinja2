{% import 'macros/form.jinja2' as f with context %}

{% if request.endpoint.endswith('new') %}
  {% set endpoint = 'admin.businesses_new' %}
  {% set form_kwargs = {} %}
  {% set legend = 'Add a new business' %}
  {% set button = _('Add') %}
{% else %}
  {% set endpoint = 'admin.businesses_edit' %}
  {% set form_kwargs = {'id': business.id} %}
  {% set legend = 'Update this business' %}
  {% set button = _('Save') %}
{% endif %}

<div class="row">
    <div class="col-md-5 well">
      {% call f.form_tag(endpoint, **form_kwargs) %}
          <legend>{{ legend }}</legend>
          <label for="">Created on</label>
          <h5 class="sm-margin-bottom">
              <time class="from-now"
                    data-datetime="{{ business.created_on }}">
                {{ business.created_on }}
              </time>
          </h5>
          <label for="">E-mail address</label>
          <h5 class="sm-margin-bottom text-muted">
            {{ business.email }}
          </h5>

        {% call f.form_group(form.username, css_class='sm-margin-bottom',
                           autofocus='autofocus') %}
        {% endcall %}

        {% call f.form_group(form.name, css_class='sm-margin-bottom') %}
        {% endcall %}

        {% call f.form_group(form.locale, css_class='sm-margin-bottom') %}
        {% endcall %}

        {% call f.form_group(form.type, css_class='sm-margin-bottom') %}
        {% endcall %}

        {% call f.form_group(form.active) %}
        {% endcall %}

          <hr>
          <div class="row">
              <div class="col-md-6">
                  <button type="submit" class="btn btn-primary btn-block">
                    {{ button }}
                  </button>
              </div>
              <div class="col-md-6">
                  <div class="visible-xs visible-sm sm-margin-top"></div>
                  <a href="{{ url_for('admin.businesses') }}"
                     class="btn btn-default btn-block">
                      {{ _('Cancel') }}
                  </a>
              </div>
          </div>
      {% endcall %}
    </div>
    <div class="col-md-5 col-md-push-1 col-md-offset-1">
        <h3>Subscription details</h3>

        <div class="panel panel-default">
            <div class="panel-body">
                <dl>
                  
                </dl>
            </div>
        </div>
        <h3>Login activity</h3>

        <div class="panel panel-default">
            <div class="panel-body">
                <dl>
                    <dt>Sign in count</dt>
                    <dd class="sm-margin-bottom">{{ business.sign_in_count }}</dd>
                    <dt>Current sign in date</dt>
                    <dd class="sm-margin-bottom">
                      {% if business.current_sign_in_on %}
                          <time class="from-now"
                                data-datetime="{{ business.current_sign_in_on }}">
                            {{ business.current_sign_in_on }}
                          </time>
                      {% endif %}
                    </dd>
                    <dt>Current sign in IP address</dt>
                    <dd class="sm-margin-bottom">{{ business.current_sign_in_ip }}</dd>
                    <dt>Previous sign in date</dt>
                    <dd class="sm-margin-bottom">
                      {% if business.last_sign_in_on %}
                          <time class="from-now"
                                data-datetime="{{ business.last_sign_in_on }}">
                            {{ business.last_sign_in_on }}
                          </time>
                      {% endif %}
                    </dd>
                    <dt>Previous sign in IP address</dt>
                    <dd>{{ business.last_sign_in_ip }}</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
