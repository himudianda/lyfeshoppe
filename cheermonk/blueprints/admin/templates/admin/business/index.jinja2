{% extends 'dashboard/layouts/app.jinja2' %}
{% import 'dashboard/macros/items.jinja2' as items %}
{% import 'dashboard/macros/form.jinja2' as f with context %}

{% block title %}
    Admin - Businesses / List | CheerMonk | Social Shop with huge discounts.
{% endblock %}

{% block content %}
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">

            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title"> Businesses. </h3>
            <!-- END PAGE HEADER-->

            <div class="row">
                <div class="col-md-6">
                    {{ f.search('admin.businesses') }}
                </div>
            </div>
            <div class="row">
                {% if businesses.total == 0 %}
                    <h3>No results found</h3>
                    {% if request.args.get('q') %}
                        <p>Try limiting or removing your search terms.</p>
                    {% else %}
                        <p>There are no businesses present.</p>
                    {% endif %}
                {% else %}

                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-header">
                                    {{ items.sort('created_on', 'Date') }}
                                </th>
                                <th class="col-header">
                                    {{ items.sort('type', 'Business Type') }}
                                </th>
                                <th class="col-header">
                                    {{ items.sort('name') }}
                                </th>
                                <th class="col-header">
                                    {{ items.sort('email') }}
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for business in businesses.items %}
                                <tr>
                                    <td>
                                        <time class="from-now" data-datetime="{{ business.created_on }}">
                                            {{ business.created_on }}
                                        </time>
                                    </td>
                                    <td>
                                        <div>
                                            {{ business.type }}
                                        </div>
                                    </td>
                                    <td>
                                        <a href="{{ url_for('admin.businesses_edit', id=business.id) }}">
                                            {{ business.name }}
                                        </a>
                                    </td>
                                    <td>
                                        {{ business.email }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ items.paginate(businesses) }}
                {% endif %}
            </div>
        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->
{% endblock %}
