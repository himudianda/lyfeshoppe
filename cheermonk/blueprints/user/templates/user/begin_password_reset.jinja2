{% extends 'frontend/layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}
    Begin Password Reset | CheerMonk | Social Shop with huge discounts.
{% endblock %}

{% block meta_description %}
    Begin Reset password for Cheermonk
{% endblock %}

{% block body %}

        <!-- Content
        ============================================= -->
        <section id="content">
            <div class="content-wrap">
                <div class="container clearfix">
                    <div class="divcenter nobottommargin clearfix" id="tab-login-register" style="max-width: 500px;">
                        <div class="tab-container">
                            <div class="panel panel-default nobottommargin">
                                <div class="panel-body" style="padding: 40px;">

                                  {% call f.form_tag('user.begin_password_reset') %}
                                    <legend>Reset your password</legend>
                                    <p class="small help-block sm-margin-bottom">
                                      We'll send you an email to reset your password.
                                    </p>

                                    {% call f.form_group(form.identity, css_class='sm-margin-bottom',
                                      autofocus='autofocus') %}
                                    {% endcall %}

                                    <div class="row">
                                      <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary btn-block">
                                          {{ _('Continue') }}
                                        </button>
                                      </div>
                                      <div class="col-md-6">
                                        <div class="visible-xs visible-sm sm-margin-top"></div>
                                        <a href="{{ url_for('user.login') }}" class="btn btn-default btn-block">
                                          {{ _('Back to login') }}
                                        </a>
                                      </div>
                                    </div>
                                  {% endcall %}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- #content end -->

{% endblock %}
