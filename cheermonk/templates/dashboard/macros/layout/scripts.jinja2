{# Render scripts that get included on all pages. #}
{%- macro render() -%}

  <!-- BEGIN CORE PLUGINS -->
  <script src="{{ url_for('static', filename='dashboard/global/plugins/jquery.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/global/plugins/js.cookie.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/global/plugins/jquery.blockui.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/global/plugins/uniform/jquery.uniform.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js') }}" type="text/javascript"></script>
  <!-- END CORE PLUGINS -->

  {{ situational_page_level_plugins() }}

  {{ javascript_tag('vendor_js', 'app_js') | safe }}

  <!-- BEGIN THEME GLOBAL SCRIPTS -->
  <script src="{{ url_for('static', filename='dashboard/global/scripts/app.min.js') }}" type="text/javascript"></script>
  <!-- END THEME GLOBAL SCRIPTS -->

  {{ situational_page_level_scripts() }}

  <!-- BEGIN THEME LAYOUT SCRIPTS -->
  <script src="{{ url_for('static', filename='dashboard/layouts/layout2/scripts/layout.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/layouts/layout2/scripts/demo.min.js') }}" type="text/javascript"></script>
  <script src="{{ url_for('static', filename='dashboard/layouts/global/scripts/quick-sidebar.min.js') }}" type="text/javascript"></script>
  <!-- END THEME LAYOUT SCRIPTS -->

  {{ situational() }}

{%- endmacro -%}


{# Render assets that get situationally loaded based on the endpoint. #}
{%- macro situational_page_level_plugins() -%}
  {% if request.endpoint in ('backend.shop_details') %}
      <script src="{{ url_for('static', filename='dashboard/global/plugins/moment.min.js') }}" type="text/javascript"></script>
      <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}" type="text/javascript"></script>
      <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap-datepaginator/bootstrap-datepaginator.min.js') }}" type="text/javascript"></script>
      <script src="{{ url_for('static', filename='dashboard/global/plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
  {% endif %}
{%- endmacro -%}


{# Render assets that get situationally loaded based on the endpoint. #}
{%- macro situational_page_level_scripts() -%}
  {% if request.endpoint in ('backend.shop_details') %}
      <script src="{{ url_for('static', filename='dashboard/pages/scripts/ui-datepaginator.min.js') }}" type="text/javascript"></script>
      <script src="{{ url_for('static', filename='dashboard/pages/scripts/components-select2.min.js') }}" type="text/javascript"></script>
  {% endif %}
{%- endmacro -%}


{# Render assets that get situationally loaded based on the endpoint. #}
{%- macro situational() -%}
  {% if request.endpoint in ('backend.shop', 'backend.shop_details') %}
      <script src="{{ url_for('static', filename='dashboard/global/plugins/cubeportfolio/js/jquery.cubeportfolio.min.js') }}" type="text/javascript"></script>
      <script src="{{ url_for('static', filename='dashboard/pages/scripts/portfolio-1.min.js') }}" type="text/javascript"></script>
  {% endif %}
  {% if request.endpoint in ('backend.shop_details') %}
      <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
      <script src="{{ url_for('static', filename='dashboard/global/plugins/gmaps/gmaps.min.js') }}" type="text/javascript"></script>
      <script src="{{ url_for('static', filename='dashboard/pages/scripts/maps-google.min.js') }}" type="text/javascript"></script>
      <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap-tabdrop/js/bootstrap-tabdrop.js') }}" type="text/javascript"></script>
  {% endif %}
{%- endmacro -%}
