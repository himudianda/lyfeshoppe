<html lang="en">
    <!--<![endif]-->
    <!-- BEGIN HEAD -->
    <head>
        <meta charset="utf-8" />
        <title>LyfeShoppe | Launchpad</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <meta content="" name="description" />
        <meta content="" name="author" />
        <!-- BEGIN LAYOUT FIRST STYLES -->
        <link href="//fonts.googleapis.com/css?family=Oswald:400,300,700" rel="stylesheet" type="text/css" />
        <!-- END LAYOUT FIRST STYLES -->

        <!-- BEGIN GLOBAL MANDATORY STYLES -->
        <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
        <link href="{{ url_for('static', filename='dashboard/global/plugins/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ url_for('static', filename='dashboard/global/plugins/simple-line-icons/simple-line-icons.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ url_for('static', filename='dashboard/global/plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ url_for('static', filename='dashboard/global/plugins/uniform/css/uniform.default.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ url_for('static', filename='dashboard/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css') }}" rel="stylesheet" type="text/css" />
        <!-- END GLOBAL MANDATORY STYLES -->
        <!-- BEGIN THEME GLOBAL STYLES -->
        <link href="{{ url_for('static', filename='dashboard/global/css/components.min.css') }}" rel="stylesheet" id="style_components" type="text/css" />
        <link href="{{ url_for('static', filename='dashboard/global/css/plugins.min.css') }}" rel="stylesheet" type="text/css" />
        <!-- END THEME GLOBAL STYLES -->
        <!-- BEGIN THEME LAYOUT STYLES -->
        <link href="{{ url_for('static', filename='dashboard/layouts/layout6/css/layout.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ url_for('static', filename='dashboard/layouts/layout6/css/custom.min.css') }}" rel="stylesheet" type="text/css" />
        <!-- END THEME LAYOUT STYLES -->
        <link rel="shortcut icon" href="favicon.ico" /> </head>
    <!-- END HEAD -->

    <body class="">
        <!-- BEGIN HEADER -->
        <header class="page-header">
            <nav class="navbar" role="navigation">
                <div class="container-fluid">
                    <div class="havbar-header">
                        <!-- BEGIN LOGO -->
                        <a id="index" class="navbar-brand" href="{{ url_for('backend.launchpad') }}">
                            <img src="{{ url_for('static', filename='common/images/lyfeshoppe-small-logo-light.png') }}" alt="logo" class="logo-default" />
                        <!-- END LOGO -->
                        <!-- BEGIN TOPBAR ACTIONS -->
                        <div class="topbar-actions">
                            <!-- DOC: Apply "search-form-expanded" right after the "search-form" class to have half expanded search box -->
                            <form class="search-form" action="extra_search.html" method="GET">
                                <div class="input-group">
                                    <span class="input-group-btn">
                                    </span>
                                </div>
                            </form>
                            <!-- END HEADER SEARCH BOX -->
                            <!-- BEGIN GROUP NOTIFICATION -->
                            <div class="btn-group-notification btn-group" id="header_notification_bar">
                                <ul class="dropdown-menu-v2">
                                    <li class="external">
                                        <a href="#"></a>
                                    </li>
                                </ul>
                            </div>
                            <!-- END GROUP NOTIFICATION -->
                            <!-- BEGIN USER PROFILE -->
                            <div class="btn-group-img btn-group">

                                <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <span class="username username-hide-on-mobile"> {{ current_user.name if current_user.name else current_user.email }} </span>
                                </button>

                                <ul class="dropdown-menu-v2" role="menu">
                                    <li>
                                        <a href="{{ url_for('backend.user_account') }}">
                                            <i class="icon-user"></i> My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ url_for('backend.account_settings') }}">
                                            <i class="icon-user"></i> Profile Settings
                                        </a>
                                    </li>
                                    <li class="divider"> </li>
                                    <li>
                                        <a href="{{ url_for('user.logout') }}">
                                            <i class="icon-key"></i> Log Out </a>
                                    </li>
                                </ul>
                            </div>
                            <!-- END USER PROFILE -->
                        </div>
                        <!-- END TOPBAR ACTIONS -->
                    </div>
                </div>
                <!--/container-->
            </nav>
        </header>
        <!-- END HEADER -->
        <!-- BEGIN CONTAINER -->
        <div class="page-content">
            <div class="container">
                <!-- BEGIN PAGE BASE CONTENT -->
                <!-- Center Wrap BEGIN -->
                <div class="center-wrap">
                    <div class="center-align">
                        <div class="center-body">
                            <div class="row">
                                <div class="col-sm-6 margin-bottom-30">
                                    <a class="webapp-btn" href="{{ url_for('backend.shops_list') }}">
                                        <h3>Go Shopping</h3>
                                        <p>Start shopping on LyfeShoppe</p>
                                    </a>
                                </div>
                                {% if current_user.num_of_businesses == 0 %}
                                    <div class="col-sm-6 margin-bottom-30">
                                        <a class="webapp-btn" href="{{ url_for('backend.businesses_new') }}">
                                            <h3>Create a Shop</h3>
                                            <p>Create your shop on LyfeShoppe</p>
                                        </a>
                                    </div>
                                {% elif current_user.num_of_businesses == 1 %}
                                    {% set business_username = current_user.businesses.first().username %}
                                    <div class="col-sm-6 margin-bottom-30">
                                        <a class="webapp-btn" href="{{ url_for('backend.business_dashboard', username=business_username) }}">
                                            <h3>Your Shop</h3>
                                            <p>You have {{ current_user.num_of_businesses }} shop on LyfeShoppe</p>
                                        </a>
                                    </div>
                                {% else %}
                                    <div class="col-sm-6 margin-bottom-30">
                                        <a class="webapp-btn" href="{{ url_for('backend.businesses') }}">
                                            <h3>Your Shops</h3>
                                            <p>You have {{ current_user.num_of_businesses }} shops on LyfeShoppe</p>
                                        </a>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="row">
                                <div class="col-sm-6 margin-bottom-30 col-md-offset-3">
                                    <a class="webapp-btn" href="{{ url_for('backend.user_account') }}">
                                        <h3>Your Profile</h3>
                                        <p>Your profile on LyfeShoppe</p>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Center Wrap END -->
                <!-- END PAGE BASE CONTENT -->
            </div>
        </div>
        <!-- END CONTAINER -->
        <!--[if lt IE 9]>
<script src="../assets/global/plugins/respond.min.js"></script>
<script src="../assets/global/plugins/excanvas.min.js"></script> 
<![endif]-->
        <!-- BEGIN CORE PLUGINS -->
        <script src="{{ url_for('static', filename='dashboard/global/plugins/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/js.cookie.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/jquery.blockui.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/uniform/jquery.uniform.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js') }}" type="text/javascript"></script>
        <!-- END CORE PLUGINS -->
        <!-- BEGIN THEME GLOBAL SCRIPTS -->
        <script src="{{ url_for('static', filename='dashboard/global/scripts/app.min.js') }}" type="text/javascript"></script>
        <!-- END THEME GLOBAL SCRIPTS -->
        <!-- BEGIN THEME LAYOUT SCRIPTS -->
        <script src="{{ url_for('static', filename='dashboard/layouts/layout6/scripts/layout.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/layouts/global/scripts/quick-sidebar.min.js') }}" type="text/javascript"></script>
        <!-- END THEME LAYOUT SCRIPTS -->
    </body>

</html>