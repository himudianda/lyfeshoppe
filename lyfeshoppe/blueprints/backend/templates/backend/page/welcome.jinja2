        <!-- BEGIN PAGE LEVEL SCRIPTS -->
        <script src="{{ url_for('static', filename='dashboard/pages/scripts/form-wizard.min.js') }}" type="text/javascript"></script>
        <!-- END PAGE LEVEL SCRIPTS -->
        <!-- BEGIN THEME LAYOUT SCRIPTS -->
        <script src="{{ url_for('static', filename='dashboard/layouts/layout2/scripts/layout.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/layouts/layout2/scripts/demo.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/layouts/global/scripts/quick-sidebar.min.js') }}" type="text/javascript"></script>
