        <script src="{{ url_for('static', filename='dashboard/global/plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='dashboard/global/plugins/jquery-validation/js/additional-methods.min.js') }}" type="text/javascript"></script>
