{% extends 'dashboard/layouts/app.jinja2' %}

{% block title %}
    Account | LyfeShoppe | Social Shop with huge discounts.
{% endblock %}

{% block content %}

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">

            <div class="row">

                <div class="col-md-12">
                    <!-- BEGIN PROFILE SIDEBAR -->
                    <div class="profile-sidebar">
                        <!-- PORTLET MAIN -->
                        <div class="portlet light profile-sidebar-portlet ">
                            <!-- SIDEBAR USERPIC -->
                            <div class="profile-userpic">
                                <img src="{{ url_for('static', filename='common/images/anonymous.jpg') }}" class="img-responsive" alt=""> </div>
                            <!-- END SIDEBAR USERPIC -->
                            <!-- SIDEBAR USER TITLE -->
                            <div class="profile-usertitle">
                                <div class="profile-usertitle-name"> {{ current_user.name }} </div>
                                <div class="profile-usertitle-job"> {{ current_user.role }} </div>
                            </div>
                            <!-- END SIDEBAR USER TITLE -->
                            <!-- SIDEBAR MENU -->
                            <div class="profile-usermenu">
                                <!-- SIDEBAR BUTTONS -->
                                <div class="profile-userbuttons">
                                    <a type="btn btn-circle green" href="{{ url_for('backend.account_settings') }}">
                                        <i class="icon-settings"></i> Account Settings
                                    </a>
                                </div>
                                <!-- END SIDEBAR BUTTONS -->
                            </div>
                            <!-- END MENU -->
                        </div>
                        <!-- END PORTLET MAIN -->
                        <!-- PORTLET MAIN -->
                        <div class="portlet light ">
                            <!-- STAT -->
                            <div class="row list-separated profile-stat">
                                <div class="col-md-4 col-sm-4 col-xs-6">
                                    <div class="uppercase profile-stat-title"> {{ current_user.points }} </div>
                                    <div class="uppercase profile-stat-text"> Points </div>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-6">
                                    <div class="uppercase profile-stat-title"> {{ current_user.referrals | length }} </div>
                                    <div class="uppercase profile-stat-text"> Referrals </div>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-6">
                                    <div class="uppercase profile-stat-title"> 8 </div>
                                    <div class="uppercase profile-stat-text"> Reviews </div>
                                </div>
                            </div>
                            <!-- END STAT -->
                            <div>
                                <div class="margin-top-20 profile-desc-link">
                                    <i class="fa fa-user"></i><strong>Username: </strong>
                                    {{current_user.username}}
                                </div>
                                <div class="margin-top-20 profile-desc-link">
                                    <i class="fa fa-envelope"></i><strong>Email: </strong>
                                    {{current_user.email}}
                                </div>
                                <div class="margin-top-20 profile-desc-link">
                                    <i class="fa fa-phone"></i><strong>Phone: </strong>
                                    {{current_user.phone}}
                                </div>
                            </div>
                        </div>
                        <!-- END PORTLET MAIN -->
                    </div>
                    <!-- END BEGIN PROFILE SIDEBAR -->
                    <!-- BEGIN PROFILE CONTENT -->
                    <div class="profile-content">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- BEGIN PORTLET -->
                                <div class="portlet light ">
                                    <div class="portlet-title">
                                        <div class="caption caption-md">
                                            <i class="icon-bar-chart theme-font hide"></i>
                                            <span class="caption-subject font-blue-madison bold uppercase">Your Points &amp; Referrals</span>
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <div class="table-scrollable table-scrollable-borderless">
                                            <table class="table table-hover table-light">
                                                <thead>
                                                    <tr class="uppercase">
                                                        <th colspan="2"> Name </th>
                                                        <th> Email </th>
                                                        <th> Status </th>
                                                    </tr>
                                                </thead>

                                                {% if not current_user.referrals | length %}
                                                    <tr>
                                                        <td class="fit">
                                                            <img class="user-pic" src=""> </td>
                                                        <td> - </td>
                                                        <td> - </td>
                                                        <td> - </td>
                                                    </tr>
                                                {% else %}
                                                    {% for ref in current_user.referrals %}
                                                        <tr>
                                                            <td class="fit">
                                                                <img class="user-pic" src="{{ url_for('static', filename='dashboard/pages/media/users/avatar4.jpg') }}"> </td>
                                                            <td>
                                                                <a href="javascript:;" class="primary-link">{{ref.reference.name}}</a>
                                                            </td>
                                                            <td> {{ref.reference.email}} </td>
                                                            <td> {{ref.status}} </td>
                                                        </tr>
                                                    {% endfor %}
                                                {% endif %}
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!-- END PORTLET -->
                            </div>
                        </div>
                    </div>
                    <!-- END PROFILE CONTENT -->
                </div>
            </div>
        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->
{% endblock %}
