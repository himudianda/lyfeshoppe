{% extends 'dashboard/layouts/app.jinja2' %}
{% import 'dashboard/macros/items.jinja2' as items %}
{% import 'dashboard/macros/form.jinja2' as f with context %}

{% block title %}
    Purchases / List | LyfeShoppe | Social Shop with huge discounts.
{% endblock %}

{% block content %}
    {% set form_kwargs = {} %}

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">

            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title"> Purchases. </h3>
            <!-- END PAGE HEADER-->

            <div class="row">
                <div class="col-md-6">
                  {{ f.search('backend.purchases', form_kwargs) }}
                </div>
            </div>

            <div class="row">
                {% if purchases.total == 0 %}
                    <h3>No results found</h3>
                    {% if request.args.get('q') %}
                        <p>Try limiting or removing your search terms.</p>
                    {% else %}
                        <p>There are no purchases present.</p>
                    {% endif %}
                {% else %}
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-header">
                                    {{ items.sort('product.name', 'Service Name') }}
                                </th>
                                <th class="col-header">
                                    {{ items.sort('business.name', 'Business Name') }}
                                </th>
                                <th class="col-header">
                                    {{ items.sort('employee.user.name', 'Staff Name') }}
                                </th>
                                <th class="col-header">
                                    {{ items.sort('status', 'Status') }}
                                </th>
                                <th class="col-header">
                                    {{ items.sort('start_time', 'Start time') }}
                                </th>
                                <th class="col-header">
                                    {{ items.sort('end_time', 'End time') }}
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for purchase in purchases.items %}
                                <tr>
                                    <td>
                                        <div>
                                            {{ purchase.product.name }}
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            {{ purchase.business.name }}
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            {{ purchase.employee.user.name }}
                                        </div>
                                    </td>
                                    <td>
                                        {{ purchase.status }}
                                    </td>
                                    <td>
                                        {{ purchase.start_time | datetime}}
                                    </td>
                                    <td>
                                        {{ purchase.end_time | datetime }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ items.paginate(purchases, form_kwargs) }}
                {% endif %}
            </div>
        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->
{% endblock %}
