{% extends 'dashboard/layouts/app.jinja2' %}
{% import 'dashboard/macros/form.jinja2' as f with context %}

{% block title %}
    Calendar | LyfeShoppe | Social Shop with huge discounts.
{% endblock %}

{% block content %}
    {% set form_kwargs = {} %}

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">

            <div class="modal fade bs-modal-lg" id="createEventModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Create Appointment</h4>
                        </div>
                        <div class="modal-body">

                            {% set endpoint = 'backend.business_calendar' %}
                            {% set form_kwargs = {'id': business.id, 'call': 'add'} %}
                            {% set button = _('Create') %}

                            <!-- Bootstrap Modal that opens for creating a Reservation -->
                            {% call f.form_tag(endpoint, **form_kwargs) %}
                            <div class="portlet box green">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-plus"></i> Create a new Reservation
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <!-- BEGIN FORM-->
                                    <form action="#" class="form-horizontal col-md-offset-1">
                                        <div class="form-body">
                                            <h3 class="form-section">Create a Reservation</h3>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9" id="employee-name">
                                                            <h5><strong>Employee:</strong></h5>
                                                            <p></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9">
                                                            <h5><strong>Customer:</strong></h5>
                                                            <select id="customer-select" class="bs-select" onchange="customerSelect()">
                                                                {% for customer in business.customers %}
                                                                    <option value="{{customer.user.email | string}}">{{customer.user.name}}</option>
                                                                {% endfor %}
                                                            </select>
                                                            </br>
                                                            {{_('New Customer?')}}
                                                            <a href="{{ url_for('backend.business_employees_new', id=business.id) }}"
                                                                class="green">
                                                                    {{ _(' First Register here.') }}
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <!--/row-->
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9" id="reservation-times">
                                                            <h5><strong>When:</strong></h5>
                                                            <p></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9">
                                                            <h5><strong>Product:</strong></h5>
                                                            <select id="product-select" class="bs-select" onchange="productSelect()">
                                                                {% for product in business.products %}
                                                                    <option value="{{product.id | string}}">{{product.name}}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <!--/row-->
                                            <div class="row" style="display: none;">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9">
                                                          {% call f.form_group(form.start_time, css_class='sm-margin-bottom') %}
                                                          {% endcall %}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="form-group">
                                                            <div class="col-md-9">
                                                              {% call f.form_group(form.end_time, css_class='sm-margin-bottom') %}
                                                              {% endcall %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <div class="row">
                                                <div>
                                                    {{ form.employee_id() }}
                                                </div>

                                                <div>
                                                    {{ form.product_id() }}
                                                </div>

                                                <div style="display: none;">
                                                    {{ form.customer_email() }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <div class="col-md-offset-6 col-md-12">
                                                            <div class="row">
                                                                <div class="col-md-3">
                                                                    <button id="submitButton" type="submit" class="btn green">
                                                                      {{ button }}
                                                                    </button>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <div class="visible-xs visible-sm sm-margin-top"></div>
                                                                    <a href="{{ url_for('backend.business_calendar', id=business.id, call=view) }}"
                                                                       class="btn red btn-block">
                                                                      {{ _('Cancel') }}
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6"> </div>
                                            </div>
                                        </div>
                                    </form>
                                    <!-- END FORM-->
                                </div>
                            </div>
                            {% endcall %}
                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>


            <div class="modal fade bs-modal-lg" id="editEventModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Modify Reservations</h4>
                        </div>
                        <div class="modal-body">

                            {% set endpoint = 'backend.business_calendar' %}
                            {% set form_kwargs = {'id': business.id, 'call': 'edit'} %}
                            {% set button = _('Save') %}

                            <!-- Bootstrap Modal that opens for modifying a Reservation -->
                            {% call f.form_tag(endpoint, **form_kwargs) %}
                            <div class="portlet box green">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-plus"></i> Modify a Reservation
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <!-- BEGIN FORM-->
                                    <form action="#" class="form-horizontal col-md-offset-1">
                                        <div class="form-body">
                                            <h3 class="form-section">Modify a Reservation</h3>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9" id="edit-employee-name">
                                                            <h5><strong>Employee:</strong></h5>
                                                            <p></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9" id="edit-customer-name">
                                                            <h5><strong>Customer:</strong></h5>
                                                            <p></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <!--/row-->
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9" id="edit-reservation-status">
                                                            {% call f.form_group(edit_form.status, css_class='sm-margin-bottom') %}
                                                            {% endcall %}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9" id="edit-product-name">
                                                            <h5><strong>Product:</strong></h5>
                                                            <p></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <!--/row-->
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="col-md-9" id="edit-start-time">
                                                          {% call f.form_group(edit_form.start_time, css_class='sm-margin-bottom') %}
                                                          {% endcall %}
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="form-group">
                                                            <div class="col-md-9" id="edit-end-time">
                                                              {% call f.form_group(edit_form.end_time, css_class='sm-margin-bottom') %}
                                                              {% endcall %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <strong>NOTE:</strong> These times are in GMT (may not be your local timezone)
                                                <!--/span-->
                                                <div>
                                                    {{ edit_form.reservation_id() }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <div class="col-md-offset-6 col-md-12">
                                                            <div class="row">
                                                                <div class="col-md-3">
                                                                    <button id="editButton" type="submit" class="btn green">
                                                                      {{ button }}
                                                                    </button>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <div class="visible-xs visible-sm sm-margin-top"></div>
                                                                    <a href="{{ url_for('backend.business_calendar', id=business.id, call='view') }}"
                                                                       class="btn red btn-block">
                                                                      {{ _('Cancel') }}
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6"> </div>
                                            </div>
                                        </div>
                                    </form>
                                    <!-- END FORM-->
                                </div>
                            </div>
                            {% endcall %}
                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>


            <div class="modal fade" id="errorEventModal" tabindex="-1" role="basic" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Error</h4>
                        </div>
                        <div class="modal-body" id="error-modal-body"> Modal body goes here </div>
                        <div class="modal-footer">
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>


            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light portlet-fit  calendar">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class=" icon-layers font-green"></i>&nbsp;
                                <span class="caption-subject font-green sbold uppercase">Calendar  for  Employee:  </span>
                                <select id="employee-select" class="bs-select input-large" data-style="green" onchange="employeeSelect()">
                                {% for employee in business.employees %}
                                    <option value="{{employee.id | string}}">{{employee.user.name}}</option>
                                {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div id="calendar" class="has-toolbar"> </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->
{% endblock %}


{% block footer_scripts %}
    <script type="text/javascript">

        var AppCalendar = function() {

            return {
                //main function to initiate the module
                init: function() {
                    this.initCalendar();
                },

                initCalendar: function() {

                    if (!jQuery().fullCalendar) {
                        return;
                    }

                    var date = new Date();
                    var d = date.getDate();
                    var m = date.getMonth();
                    var y = date.getFullYear();

                    var h = {};

                    if ($('#calendar').parents(".portlet").width() <= 720) {
                        $('#calendar').addClass("mobile");
                        h = {
                            left: 'title, prev, next',
                            center: '',
                            right: 'today,month,agendaWeek,agendaDay'
                        };
                    } else {
                        $('#calendar').removeClass("mobile");
                        h = {
                            left: 'title',
                            center: '',
                            right: 'prev,next,today,month,agendaWeek,agendaDay'
                        };
                    }

                    var emp_id = $('#employee-select').val();
                    var events = {{ events|safe }}
                    var events_all = events[emp_id]
                    for (var i = 0; i < events_all.length; i++) {
                        // Must convert to Javascript Date object for proper display
                        // Note: Time is displayed on Calendar in Local timezone
                        events_all[i].start = new Date(events_all[i].start);
                        events_all[i].end = new Date(events_all[i].end);
                        events_all[i].backgroundColor = App.getBrandColor(events_all[i].backgroundColor);
                    }

                    $('#calendar').fullCalendar('destroy'); // destroy the calendar
                    $('#calendar').fullCalendar({ //re-initialize the calendar
                        header: h,
                        defaultView: 'agendaWeek', // options: http://arshaw.com/fullcalendar/docs/views/Available_Views/ 
                        slotMinutes: 15,
                        editable: false,
                        selectable: true,
                        select: function(start, end, allDay) {
                            var mywhen = start.format("ddd, MMM Do, h:mm a") + ' - ' + end.format("h:mm a");

                            start.local().utc() // Convets start to UTC for formatting
                            end.local().utc() // Convets end to UTC for formatting
                            // start.utc().local() // Convets start to local for formatting
                            // end.utc().local() // Convets end to local for formatting

                            $('#employee-name p').text($('#employee-select option:selected').text());
                            $('#reservation-times p').text(mywhen);

                            $('#createEventModal #customer_email').val( $('#customer-select').val() );
                            $('#createEventModal #product_id').val( $('#product-select').val() );
                            $('#createEventModal #employee_id').val( $('#employee-select').val() );

                            $('#createEventModal #start_time').val( start.format('YYYY-MM-DD HH:mm:ss') );
                            $('#createEventModal #end_time').val( end.format('YYYY-MM-DD HH:mm:ss') );

                            if (!$('#createEventModal #customer_email').val() && !$('#createEventModal #product_id').val()){
                                $('#errorEventModal #error-modal-body').text("Please create Products & Customers before making reservations");
                                $('#errorEventModal').modal('show');
                                return;
                            }
                            if (!$('#createEventModal #customer_email').val()){
                                $('#errorEventModal #error-modal-body').text("Please create Customers before making reservations");
                                $('#errorEventModal').modal('show');
                                return;
                            }
                            if (!$('#createEventModal #product_id').val()){
                                $('#errorEventModal #error-modal-body').text("Please create Products before making reservations");
                                $('#errorEventModal').modal('show');
                                return;
                            }
                            $('#createEventModal').modal('show');
                        },
                        events: events_all,
                        eventClick: function(event, jsEvent, view){
                            var mywhen = event.start.format("ddd, MMM Do, h:mm a") + ' - ' + event.end.format("h:mm a");
                            $('#editEventModal #reservation_id').val( event.reservation_id );
                            $('#edit-employee-name p').text($('#employee-select option:selected').text());
                            $('#edit-customer-name p').text($('#customer-select option:selected').text());
                            $('#edit-product-name p').text($('#product-select option:selected').text());

                            event.start.local().utc() // Convets start to UTC for formatting
                            event.end.local().utc() // Convets end to UTC for formatting
                            $('#edit-start-time #start_time').val(event.start.format('YYYY-MM-DD HH:mm:ss'));
                            $('#edit-end-time #end_time').val(event.end.format('YYYY-MM-DD HH:mm:ss'));

                            $('#editEventModal').modal('show');
                        }
                    });
                }
            };
        }();

        function productSelect() {
            $('#createEventModal #product_id').val($('#product-select').val());
        }

        function customerSelect() {
            $('#createEventModal #customer_email').val($('#customer-select').val());
        }

        function employeeSelect() {
            $('#createEventModal #employee_id').val($('#employee-select').val());
            AppCalendar.init();
        }
        
        jQuery(document).ready(function() {    
           AppCalendar.init();
        });
    </script>
{% endblock %}